<div class="modal fade" id="createGameModal" tabindex="-1" aria-labelledby="createGameModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createGameModalLabel">Create a Game</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="mb-3 text-center">
            <label class="form-label">Minutes per side</label>
            <input type="range" class="form-range" name="minutes" min="1" max="60" step="1" value="5">
          </div>
          <div class="mb-3 text-center">
            <label class="form-label">Increment in seconds</label>
            <input type="range" class="form-range" name="increment" min="0" max="60" step="1" value="3">
          </div>
          <div class="mb-3 d-flex justify-content-center">
            <div>
              <input type="radio" id="createGameModalColorRadioWhite" name="color" value="w">
              <label for="createGameModalColorRadioWhite"><img src="{{ asset('img/pieces/png/75/wKing.png') }}" alt="White"></label>
            </div>
            <div>
              <input type="radio" id="createGameModalColorRadioRandom" name="color" value="{{ random(['w', 'b']) }}" checked>
              <label for="createGameModalColorRadioRandom"><img src="{{ asset('img/pieces/png/75/wbKing.png') }}" alt="Random"></label>
            </div>
            <div>
              <input type="radio" id="createGameModalColorRadioBlack" name="color" value="b">
              <label for="createGameModalColorRadioBlack"><img src="{{ asset('img/pieces/png/75/bKing.png') }}" alt="Black"></label>
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label">Variant</label>
            <select name="variant" class="form-select" aria-label="Select a variant" required>
              <option value="">Select a variant</option>
              <option value="classical">Classical</option>
              <option value="960">Fischer Random</option>
            </select>
          </div>
          <button type="submit" class="btn btn-secondary w-100">Accept</button>
        </form>
      </div>
    </div>
  </div>
</div>
