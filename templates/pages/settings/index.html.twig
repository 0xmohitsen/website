{% extends 'layout/content.html.twig' %}

{% block main %}
  <div class="container p-4">
    <h1 class="h3">{{ 'Settings'|trans }}</h1>
    <hr class="hr">
    <form id="settingsForm">
      <div>
        <div class="mb-3">
          <label class="form-label">{{ 'Language'|trans }}</label>
          <select name="locale" class="form-select" required>
            <option value="en">English</option>
            <option value="es">Español</option>
            <option value="fr">Français</option>
            <option value="ru">Русский</option>
          </select>
        </div>
        <div class="mb-3">
          <label class="form-label">{{ 'Theme'|trans }}</label>
          <select name="theme" class="form-select" required>
            <option value="dark">Dark</option>
            <option value="light">Light</option>
          </select>
        </div>
        <div class="mb-3">
          <label class="form-label">{{ 'Display moves'|trans }}</label>
          <select name="format" class="form-select" required>
            <option value="inline">{{ 'Inline'|trans }}</option>
            <option value="table">{{ 'Table'|trans }}</option>
          </select>
        </div>
        <div class="mb-3">
          <label class="form-label">{{ 'Notation'|trans }}</label>
          <select name="notation" class="form-select" required>
            <option value="fan">{{ 'Figurine Algebraic Notation (FAN)'|trans }}</option>
            <option value="san">{{ 'Standard Algebraic Notation (SAN)'|trans }}</option>
          </select>
        </div>
        <div class="mb-3">
          <label class="form-label">{{ 'Piece set'|trans }}</label>
          <select name="set" class="form-select" required>
            <option value="classical">{{ 'Classical'|trans }}</option>
            <option value="staunty">{{ 'Staunty'|trans }}</option>
          </select>
        </div>
        <div>
          <button type="submit" class="btn btn-primary">{{ 'Save Changes'|trans }}</button>
        </div>
      </div>
    </form>
  </div>
  {% block javascripts %}
    {% block importmap %}
      {{ importmap('js/pages/settings/index.js') }}
    {% endblock %}
  {% endblock %}
{% endblock %}
