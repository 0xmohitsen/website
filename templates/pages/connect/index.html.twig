{% extends 'layouts/content.html.twig' %}

{% block main %}
  <div class="container p-4">
    <h1 class="h3">{{ 'Connect'|trans }}</h1>
    <hr class="hr">
    <form id="connectForm">
      <div>
        <div class="mb-3">
          <label class="form-label">{{ 'ChesslaBlab Server'|trans }}</label>
          <select name="ws" class="form-select" required>
            <option value="">{{ 'Select a host'|trans }}</option>
          </select>
        </div>
        <div class="mb-3">
          <label class="form-label">{{ 'ChesslaBlab API'|trans }}</label>
          <select name="api" class="form-select" required>
            <option value="">{{ 'Select a host'|trans }}</option>
          </select>
        </div>
              <div>
          <button type="submit" class="btn btn-primary">{{ 'Save Changes'|trans }}</button>
        </div>
      </div>
    </form>
  </div>
  {% block javascripts %}
    {% block importmap %}
      {{ importmap('js/pages/connect/index.js') }}
    {% endblock %}
  {% endblock %}
{% endblock %}
