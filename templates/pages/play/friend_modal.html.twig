<div class="modal fade" id="playFriendModal" tabindex="-1" aria-labelledby="playFriendModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="playFriendModalLabel">Play a Friend</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="mb-3 text-center">
            <label class="form-label">Minutes per side</label>
            <input type="range" class="form-range" name="minutes" min="1" max="60" step="1" value="5">
          </div>
          <div class="mb-3 text-center">
            <label class="form-label">Increment in seconds</label>
            <input type="range" class="form-range" name="increment" min="1" max="60" step="1" value="3">
          </div>
          <div class="mb-3 d-flex justify-content-center">
            <div>
              <input type="radio" id="playFriendModalColorRadioWhite" name="color" value="w">
              <label for="playFriendModalColorRadioWhite"><img src="{{ asset('img/pieces/png/75/wKing.png') }}" alt="White"></label>
            </div>
            <div>
              <input type="radio" id="playFriendModalColorRadioRandom" name="color" value="{{ random(['w', 'b']) }}" checked>
              <label for="playFriendModalColorRadioRandom"><img src="{{ asset('img/pieces/png/75/wbKing.png') }}" alt="Random"></label>
            </div>
            <div>
              <input type="radio" id="playFriendModalColorRadioBlack" name="color" value="b">
              <label for="playFriendModalColorRadioBlack"><img src="{{ asset('img/pieces/png/75/bKing.png') }}" alt="Black"></label>
            </div>
          </div>
          <div class="mb-3">
            <select name="variant" class="form-select" aria-label="Select a variant" required>
              <option value="">Select a variant</option>
              <option value="classical">Classical</option>
              <option value="960">Fischer Random</option>
            </select>
          </div>
          <div class="mb-3 startPos d-none">
            <input type="text" name="startPos" placeholder="Enter a start position" class="form-control">
             <small class="form-text text-muted">Example: RNBQKBNR</small>
          </div>
          <div class="mb-3">
            <input type="text" name="fen" placeholder="Enter a FEN" class="form-control">
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Create Invite Code</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
