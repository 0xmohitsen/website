<div class="modal fade" id="playFriendModal" tabindex="-1" aria-labelledby="playFriendModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="playFriendModalLabel">{{ 'Play a Friend'|trans }}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="mb-3 text-center">
            <label class="form-label">{{ 'Minutes per side'|trans }}</label>
            <input type="range" class="form-range" name="minutes" min="1" max="60" step="1" value="5">
          </div>
          <div class="mb-3 text-center">
            <label class="form-label">{{ 'Increment in seconds'|trans }}</label>
            <input type="range" class="form-range" name="increment" min="1" max="60" step="1" value="3">
          </div>
          <div class="mb-3 d-flex justify-content-center">
            <div>
              <input type="radio" id="colorRadioWhite" name="color" value="w">
              <label for="colorRadioWhite"><img src="{{ asset('img/pieces/png/75/wKing.png') }}" alt="White"></label>
            </div>
            <div>
              <input type="radio" id="colorRadioRandom" name="color" value="{{ random(['w', 'b']) }}" checked>
              <label for="colorRadioRandom"><img src="{{ asset('img/pieces/png/75/wbKing.png') }}" alt="Random"></label>
            </div>
            <div>
              <input type="radio" id="colorRadioBlack" name="color" value="b">
              <label for="colorRadioBlack"><img src="{{ asset('img/pieces/png/75/bKing.png') }}" alt="Black"></label>
            </div>
          </div>
          <div class="mb-3">
            <select name="variant" class="form-select" aria-label="{{ 'Select a variant'|trans }}" required>
              <option value="">{{ 'Select a variant'|trans }}</option>
              <option value="classical">{{ 'Classical'|trans }}</option>
              <option value="960">{{ 'Fischer Random'|trans }}</option>
            </select>
          </div>
          <div class="mb-3 startPos d-none">
            <input type="text" name="startPos" placeholder="Enter a start position" class="form-control">
             <small class="form-text text-muted">Example: RNBQKBNR</small>
          </div>
          <div class="mb-3">
            <input type="text" name="fen" placeholder="{{ 'Enter a FEN'|trans }}" class="form-control">
          </div>
          <div>
            <button type="submit" class="btn btn-primary w-100">{{ 'Create Invite Code'|trans }}</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
