{% extends 'layout/play.html.twig' %}

{% block main %}
  <div class="col-md-5">
    <div id="chessboard"></div>
  </div>
  <div class="col-md-3">
    <div id="friendButtons" class="btn-group-vertical w-100 mb-3">
      <button class="btn btn-secondary" type="button">Play a Friend</button>
      <button class="btn btn-secondary" type="button">Enter Invite Code</button>
    </div>
    <div id="onlinePlayers" class="table-responsive card">
      <div class="card-header text-center">
        Online Players
      </div>
      <div class="card-body">
        <table class="rounded-3 table table-hover mb-3">
          <tbody></tbody>
        </table>
        <button class="btn btn-secondary w-100" type="button">Create a Game</button>
      </div>
    </div>
    {% include 'pages/play/copy_invite_code_modal.html.twig' %}
    {% include 'pages/play/create_game_modal.html.twig' %}
    {% include 'pages/play/draw_modal.html.twig' %}
    {% include 'pages/play/enter_invite_code_modal.html.twig' %}
    {% include 'pages/play/friend_modal.html.twig' %}
    {% include 'pages/play/takeback_modal.html.twig' %}
    {% include 'pages/play/rematch.html.twig' %}
    {% include 'partial/panel/play.html.twig' %}
  </div>
  <div class="col-md-4">
    <iframe src="https://web.libera.chat/gamja/#chesslablab" style="border: 0; border-radius: 0.375rem; width: 100%; height: 544px"></iframe>
  </div>
  {% block javascripts %}
    {% block importmap %}
      {{ importmap('js/pages/play/online/index.js') }}
    {% endblock %}
  {% endblock %}
{% endblock %}
