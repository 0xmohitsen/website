<div class="modal fade" id="checkmateSkillsModal" tabindex="-1" aria-labelledby="checkmateSkillsModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="checkmateSkillsModalLabel">{{ 'Checkmate'|trans }}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="mb-3 text-center">
            <select name="items" class="form-select" aria-label="{{ 'Select a variant'|trans }}" required>
              <option value="">{{ 'Select a checkmate'|trans }}</option>
              <option value="rand">{{ 'Random'|trans }}</option>
              <option value="QR,R">{{ 'King and queen and rook vs. king and rook'|trans }}</option>
              <option value="Q">{{ 'King and queen vs. king'|trans }}</option>
              <option value="R">{{ 'King and rook vs. king'|trans }}</option>
              <option value="BB">{{ 'King and two bishops vs. king'|trans }}</option>
              <option value="BN">{{ 'King and bishop and knight vs. king'|trans }}</option>
            </select>
          </div>
          <div class="mb-3 d-flex justify-content-center">
            <div>
              <input type="radio" id="checkmateModalRadioWhite" name="color" value="w">
              <label for="checkmateModalRadioWhite"><img src="{{ asset('img/pieces/png/75/wKing.png') }}" alt="White"></label>
            </div>
            <div>
              <input type="radio" id="checkmateModalRadioRandom" name="color" value="{{ random(['w', 'b']) }}" checked>
              <label for="checkmateModalRadioRandom"><img src="{{ asset('img/pieces/png/75/wbKing.png') }}" alt="Random"></label>
            </div>
            <div>
              <input type="radio" id="checkmateModalRadioBlack" name="color" value="b">
              <label for="checkmateModalRadioBlack"><img src="{{ asset('img/pieces/png/75/bKing.png') }}" alt="Black"></label>
            </div>
          </div>
          <div>
            <button type="submit" class="btn btn-primary w-100">{{ 'Create Game'|trans }}</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
