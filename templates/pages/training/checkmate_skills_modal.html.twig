<div class="modal fade" id="checkmateSkillsModal" tabindex="-1" aria-labelledby="checkmateSkillsModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="checkmateSkillsModalLabel">Checkmate Skills</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="mb-3 text-center">
            <select name="items" class="form-select" aria-label="Select a variant" required>
              <option value="">Select a checkmate</option>
              <option value="rand">Random</option>
              <option value="QR,R">King and queen and rook vs. king and rook</option>
              <option value="Q">King and queen vs. king</option>
              <option value="R">King and rook vs. king</option>
              <option value="BB">King and two bishops vs. king</option>
              <option value="BN">King and bishop and knight vs. king</option>
            </select>
          </div>
          <div class="mb-3 d-flex justify-content-center">
            <div>
              <input type="radio" id="colorRadioWhite" name="color" value="w">
              <label for="colorRadioWhite"><img src="{{ asset('img/pieces/png/75/wKing.png') }}" alt="White"></label>
            </div>
            <div>
              <input type="radio" id="colorRadioRandom" name="color" value="{{ random(['w', 'b']) }}" checked>
              <label for="colorRadioRandom"><img src="{{ asset('img/pieces/png/75/wbKing.png') }}" alt="Random"></label>
            </div>
            <div>
              <input type="radio" id="colorRadioBlack" name="color" value="b">
              <label for="colorRadioBlack"><img src="{{ asset('img/pieces/png/75/bKing.png') }}" alt="Black"></label>
            </div>
          </div>
          <div>
            <button type="submit" class="btn btn-primary w-100">Create Game</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
